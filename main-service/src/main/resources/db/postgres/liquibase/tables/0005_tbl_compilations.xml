<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="tbl_create_compilations" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="compilations"/>
            </not>
        </preConditions>
        <createTable tableName="compilations">
            <column name="comp_id" type="BIGINT GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(60)"/>
            <column name="pinned" type="boolean"/>
        </createTable>
    </changeSet>
</databaseChangeLog>