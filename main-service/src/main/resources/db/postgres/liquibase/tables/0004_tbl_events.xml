<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="tbl_create_events" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="events"/>
            </not>
        </preConditions>
        <createTable tableName="events">
            <column name="event_id" type="BIGINT GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(130)"/>
            <column name="annotation" type="text"/>
            <column name="cat_cat_id" type="bigint"/>
            <column name="user_user_id" type="bigint"/>
            <column name="description" type="text"/>
            <column name="event_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="lat" type="numeric"/>
            <column name="lon" type="numeric"/>
            <column name="paid" type="boolean"/>
            <column name="participant_limit" type="integer"/>
            <column name="request_moderation" type="boolean"/>
            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="publish_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="evst_evst_id" type="integer"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="events"
                baseColumnNames="cat_cat_id"
                referencedTableName="categories"
                referencedColumnNames="cat_id"
                constraintName="events_cat_cat_id_fkey"/>
        <addForeignKeyConstraint
                baseTableName="events"
                baseColumnNames="user_user_id"
                referencedTableName="users"
                referencedColumnNames="user_id"
                constraintName="events_user_user_id_fkey"/>
        <addForeignKeyConstraint
                baseTableName="events"
                baseColumnNames="evst_evst_id"
                referencedTableName="event_states"
                referencedColumnNames="evst_id"
                constraintName="events_evst_evst_id_fkey"/>
    </changeSet>
</databaseChangeLog>