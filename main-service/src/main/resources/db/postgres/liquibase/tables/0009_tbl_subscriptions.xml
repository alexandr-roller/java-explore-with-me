<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="tbl_create_subscriptions" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="subscriptions"/>
            </not>
        </preConditions>
        <createTable tableName="subscriptions">
            <column name="sbstn_id" type="BIGINT GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true"/>
            </column>
            <column name="subscriber_id" type="bigint"/>
            <column name="user_user_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="subscriptions"
                baseColumnNames="subscriber_id"
                referencedTableName="users"
                referencedColumnNames="user_id"
                constraintName="subscriptions_subscriber_id_fkey"/>
        <addForeignKeyConstraint
                baseTableName="subscriptions"
                baseColumnNames="user_user_id"
                referencedTableName="users"
                referencedColumnNames="user_id"
                constraintName="subscriptions_user_user_id_fkey"/>
    </changeSet>
</databaseChangeLog>