<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="tbl_create_endpoint_hits" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="endpoint_hits"/>
            </not>
        </preConditions>
        <createTable tableName="endpoint_hits">
            <column name="hit_id" type="BIGINT GENERATED BY DEFAULT AS IDENTITY">
                <constraints primaryKey="true"/>
            </column>
            <column name="app" type="varchar(250)"/>
            <column name="uri" type="varchar(2083)"/>
            <column name="ip" type="varchar(45)"/>
            <column name="insert_date" type="TIMESTAMP WITHOUT TIME zone"/>
        </createTable>
    </changeSet>
</databaseChangeLog>